{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "ES2019"
    ],
    "module": "CommonJS",
    "outDir": "dist/",
    "rootDir": "src/",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  },
  "exclude": [
    "node_modules/",
    "src/test.ts",
    "dist/"
  ]
}
